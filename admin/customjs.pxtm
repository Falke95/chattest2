    <!-- Anzeigen der hochgeladenen Emoticons -->
    <div>
        <h3>Verfügbare Emoticons</h3>
        <?php 
        $emoticons = array();
        if(file_exists('emocodes.php') && is_readable('emocodes.php')) {
            include 'emocodes.php';
        }

        if(is_array($emoticons)) {
            foreach ($emoticons as $emoticon) {
                // Ersetzen Sie ':' durch 'svg_emo_' für die CSS-Klasse
                $cssClass = 'svg_emo_' . str_replace(':', '', $emoticon);
                echo '<div class="emoticon-display"><span class="' . htmlspecialchars($cssClass) . '"></span><br>' . htmlspecialchars($emoticon) . '</div>';
            }
        }
        ?>
    </div>

    <!-- Löschen eines Emoticons -->
    <form action="admin.php?q=emotion&delete" method="post">
        <select name="delete_emoticon">
            <?php 
            if(is_array($emoticons)) {
                foreach ($emoticons as $emoticon) {
                    echo '<option value="' . htmlspecialchars($emoticon) . '">' . htmlspecialchars($emoticon) . '</option>';
                }
            }
            ?>
        </select>
        <input type="submit" value="Delete Emoticon">
    </form>

